<style>
	.site-header__logo img {
		max-width: {{ section.settings.logo_max_width | escape | default: '180' | remove: 'px' | append: 'px' }};
	}

	@media screen and (max-width: 768px) {
		.site-header__logo img {
			max-width: 100%;
		}
	}

	{% if template contains 'article.journal-post' %}
	body {

	}

	{% endif %}
</style>

<div data-section-id="{{ section.id }}" data-section-type="header-section" data-template="{{ request.page_type }}">

	<div id="NavDrawer" class="drawer drawer--left">
		{% include 'drawer-menu' %}
	</div> <!-- # Nav Drawer -->

	{% if request.page_type == 'index'
		or template contains 'collection'
		or template contains 'about'
		or template contains 'blog'
		or template contains 'article.journal-post'
		or template == '404'
		or template == 'page.lookbook' %}
		<div class="header-container index_header drawer__header-container">
			{% include 'header' %}
		</div> <!-- header-container -->
	{% else %}
		<style>
			body {
				padding-top: 65px;
			}
		</style>
		<div class="header-container-scroll drawer__header-container">
			{% include 'header' %}
		</div> <!-- header-container -->
	{% endif %}
</div>



