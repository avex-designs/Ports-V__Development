<footer class="site-footer small--text-center" role="contentinfo">
	<div class="wrapper">

		<div class="grid-uniform-footer">
			{% if section.settings.logo != blank %}
				<div class="footer-logo-container" itemscope itemtype="http://schema.org/Organization">
					<a href="{{ routes.root_url }}" itemprop="url" class="site-header__logo-link">
						<img src="{{ section.settings.logo | img_url: '142x' }}"
							 alt="{{ section.settings.logo.alt | default: shop.name }}"
							 itemprop="logo">
					</a>
				</div>
			{% endif %}

			<div class="grid__item-footer site-footer__linklist-wrapper">
				<ul class="no-bullets site-footer__linklist">
					{% for link in linklists[section.settings.footer_link_list].links %}

						<li class="h6"><a href="{{ link.url }}">{{ link.title }}</a></li>

					{% endfor %}
				</ul>
			</div>

		</div>
		<div class="grid-uniform-footer">
			{% render 'social-icons', wrapper_class: 'grid__item-footer' %}

			<div class="grid__item-footer copyright-noise">
				<div class="grid__item-footer-copyright">
					{% assign copyright_links = section.blocks | where: "type", 'copyright_link' %}

					<div class="footer-copyright-text">
						{{ 'now' | date: '%Y' }} {{ shop.name | upcase | link_to: routes.root_url }}. All rights
						Reserved
						{% if copyright_links.size > 0 %}
							<span class="mob-hide">|</span>
						{% endif %}
					</div>

					{% if copyright_links.size > 0 %}
						<div class="footer-copyright__links">
							{% for block in copyright_links %}
								{% assign link = block.settings %}
								{% unless forloop.first %}
									<span>|</span>
								{% endunless %}
								<a href="{{ link.copyright_link }}" title="{{ link.copyright_link_title }}">
									{{ link.copyright_link_title }}
								</a>
							{% endfor %}
						</div>
					{% endif %}

					{% comment %}
						<a href="#" title="Terms and Conditions"> Terms & Conditions</a>
						<a href="#" title="Privacy Policy"> Privacy Policy</a>
					{% endcomment %}
				</div>
				{% comment %}
					{%- if section.settings.show_payment_icons -%}
						{%- unless shop.enabled_payment_types == empty -%}
							<span class="visually-hidden">{{ 'general.payment.method' | t }}</span>
							<ul class="inline-list payment-icons">
								{%- for type in shop.enabled_payment_types -%}
									<li>
										{{ type | payment_type_svg_tag: class: 'icon' }}
									</li>
								{%- endfor -%}
							</ul>
						{%- endunless -%}
					{%- endif -%}
				{% endcomment %}
			</div>
		</div>

	</div>
</footer>


