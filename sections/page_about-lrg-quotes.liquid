<section data-section-id="{{ section.id }}" id="about_large-quote" class="viewport-section">
	<div class="wrapper">
		
		<div class="main_text">
			<h2 class="h4">{{ section.settings.main_text }}</h2>
		</div>

		<div class="eyebrow_text">
			<h6 class="caption">{{ section.settings.title }}</h6>
		</div>

	</div>
</section>


{% schema %}
  {
    "name": "Large Quote",
    "settings": [
      {
        "id": "title",
        "type": "text",
        "label": "Quote Person",
        "default": "Hello world"
      },
      {
        "id": "main_text",
        "type": "textarea",
        "label": "Quote Copy",
        "default": "Hello world"
      }
    ],
	  "presets": [
	    {
	      "name": "Large Quote",
	      "category": "About Page"
	    }
	  ]
  }
{% endschema %}