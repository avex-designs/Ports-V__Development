<!-- /templates/customers/reset_password.liquid -->
<div class="account-page--wrapper">

  {% form 'reset_customer_password', class: 'general-form reset-password-form' %}


    <div class="grid">
      <div class="grid__item large--one-half push--large--one-quarter text-center">
        <header class="section-header">
          <h1 class="section-header__title h2">{{ 'customer.reset_password.title' | t }}</h1>
        </header>
      </div>
    </div>

    <div class="grid">
      <div class="grid__item xlarge--four-twelfths large--one-half push--xlarge--one-third push--large--one-quarter text-center">

        <div class="general-form--inner">

          <div class="input-group">
            <a href="#" class="toggle-password icon-eye"></a>
            <input type="password" value="" name="customer[password]" id="ResetPassword" class="input-full{% if form.errors contains 'password' %} error{% endif %}" placeholder="{{ 'customer.reset_password.password' | t }}" data-indicator="huratips-pwindicator">
            <label for="ResetPassword" class="floated-label">{{ 'customer.reset_password.password' | t }}</label>
          </div>

          <div class="input-group">
            <a href="#" class="toggle-password icon-eye"></a>
            <input type="password" value="" name="customer[password_confirmation]" id="PasswordConfirmation" class="input-full{% if form.errors contains 'password_confirmation' %} error{% endif %}" placeholder="{{ 'customer.reset_password.password_confirm' | t }}">
            <label for="PasswordConfirmation" class="floated-label">{{ 'customer.reset_password.password_confirm' | t }}</label>
          </div>

          <div class="password-validation text-left" id="huratips-pwindicator">
            <div class="label"></div>
          </div>
          {% if form.errors %}
            <div class="password-validation text-left">
              {% for field in form.errors %}
                {% if field == 'password_confirmation' %}
                  <p>{{ 'customer.reset_password.must_match' | t }}</p>
                {% else %}
                  <p>{{ form.errors.messages[field] }}</p>
                {% endif %}
              {% endfor %}
            </div>
          {% endif %}

          <div class="text-center">
            <input type="submit" class="btn btn--full general-form__submit" value="{{ 'customer.reset_password.submit' | t }}">
          </div>

        </div>

      </div>
    </div>

  {% endform %}

</div>

<script>
  $(function(){
    $('#ResetPassword').pwstrength({
      classes: ['very-weak', 'weak', 'mediocre', 'strong', 'very-strong'],
      texts: ['Very weak!', 'So-so!', 'Ok!', 'Good!', 'Very good!']
    });
  });
</script>