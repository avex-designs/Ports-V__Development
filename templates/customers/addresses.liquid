<!-- /templates/customers/addressess.liquid -->
{% comment %}

  Template note:
    - There are instances of inline JS below. Best practices advise separating this
      into an external JS file
    - There are separate 'add new' and 'edit' address forms

{% endcomment %}

{% paginate customer.addresses by 5 %}
<div class="account-page--wrapper">

  <div class="account-page">

    <header class="section-header">
      <h1 class="section-header__title h2">{{ 'customer.account.title' | t }}</h1>
      <a href="/account" class="underlined-link section-header__back-link">{{ 'customer.account.back_to_account_overview_link' | t }}</a>
    </header>

    <div class="account-page--content addresses">

      <aside class="account-page--left">
        {% include 'account-menu' %}
      </aside>

      <section class="account-page--right">

        <h3 class="account-page--content__title h4">{{ 'customer.addresses.title' | t }}</h3>

        <div class="account-addresses{% if customer.addresses.size <= 3 %} last{% endif %}">
          {% comment %}
            List all customer addresses with a unique edit form.
            Also add pagination in case they have a large number of addresses
          {% endcomment %}
          {% for address in customer.addresses %}

          {% assign is_fourth = forloop.index | modulo: 4 %}
          {% if is_fourth == 0 %}
          </div>
          <div class="account-addresses">
          {% endif %}

            <div class="account-addresses__item">

              {% assign address_rows = address | format_address | remove_first: '<p>' | remove_last: '</p>' | split: '<br>' %}

              <strong class="account-addresses__item-title">{{ address_rows[0] }}{% if address == customer.default_address %} - {{ 'customer.addresses.default' | t }}{% endif %}</strong>

              <address class="account-addresses__item-text">
                {{ address_rows | join: '<br>' | remove_first: address_rows[0] | remove_first: '<br>' }}
              </address>

              <p class="account-addresses__item-links">
                {{ 'customer.addresses.edit' | t | edit_customer_address_link: address.id | replace: 'href=', 'class="underlined-link" href=' }}
                {{ 'customer.addresses.delete' | t | delete_customer_address_link: address.url | replace: 'href=', 'class="underlined-link" href=' }}
              </p>

              <div id="EditAddress_{{address.id}}" class="address-lightbox">
                {% form 'customer_address', address, class: 'general-form' %}

                  <h2 class="text-center address-lightbox__title h4">{{ 'customer.addresses.edit_address' | t }}</h2>

                  <div class="grid">
                    <div class="grid__item one-half small--one-whole">
                      <div class="input-group">
                        <input type="text" id="AddressFirstName_{{form.id}}" class="input-full" name="address[first_name]" value="{{form.first_name}}" autocapitalize="words">
                        <label for="AddressFirstName_{{form.id}}" class="floated-label">{{ 'customer.addresses.first_name' | t }}</label>
                      </div>
                    </div>

                    <div class="grid__item one-half small--one-whole">
                      <div class="input-group">
                        <input type="text" id="AddressLastName_{{form.id}}" class="input-full" name="address[last_name]" value="{{form.last_name}}" autocapitalize="words">
                        <label for="AddressLastName_{{form.id}}" class="floated-label">{{ 'customer.addresses.last_name' | t }}</label>
                      </div>
                    </div>
                  </div>


                  <div class="input-group">
                    <input type="text" id="AddressCompany_{{form.id}}" class="input-full" name="address[company]" value="{{form.company}}" autocapitalize="words">
                    <label for="AddressCompany_{{form.id}}" class="floated-label">{{ 'customer.addresses.company' | t }}</label>
                  </div>

                  <div class="input-group">
                    <input type="text" id="AddressAddress1_{{form.id}}" class="input-full" name="address[address1]" value="{{form.address1}}" autocapitalize="words">
                    <label for="AddressAddress1_{{form.id}}" class="floated-label">{{ 'customer.addresses.address1' | t }}</label>
                  </div>

                  <div class="input-group">
                    <input type="text" id="AddressAddress2_{{form.id}}" class="input-full" name="address[address2]" value="{{form.address2}}" autocapitalize="words">
                    <label for="AddressAddress2_{{form.id}}" class="floated-label">{{ 'customer.addresses.address2' | t }}</label>
                  </div>

                  <div class="input-group">
                    <input type="text" id="AddressCity_{{form.id}}" class="input-full" name="address[city]" value="{{form.city}}" autocapitalize="words">
                    <label for="AddressCity_{{form.id}}" class="floated-label">{{ 'customer.addresses.city' | t }}</label>
                  </div>

                  <div class="input-group child-input-focused">
                    <select id="AddressCountry_{{form.id}}" class="input-full" name="address[country]" data-default="{{form.country}}">{{ all_country_option_tags }}</select>
                    <label for="AddressCountry_{{form.id}}" class="floated-label">{{ 'customer.addresses.country' | t }}</label>
                  </div>

                  <div id="AddressProvinceContainer_{{form.id}}" style="display:none" class="input-group child-input-focused">
                    <select id="AddressProvince_{{form.id}}" class="input-full" name="address[province]" data-default="{{form.province}}"></select>
                    <label for="AddressProvince_{{form.id}}" class="floated-label">{{ 'customer.addresses.province' | t }}</label>
                  </div>

                  <div class="grid">
                    <div class="grid__item one-half small--one-whole">
                      <div class="input-group">
                        <input type="text" id="AddressZip_{{form.id}}" class="input-full" name="address[zip]" value="{{form.zip}}" autocapitalize="characters">
                        <label for="AddressZip_{{form.id}}" class="floated-label">{{ 'customer.addresses.zip' | t }}</label>
                      </div>
                    </div>

                    <div class="grid__item one-half small--one-whole">
                      <div class="input-group">
                        <input type="tel" id="AddressPhone_{{form.id}}" class="input-full" name="address[phone]" value="{{form.phone}}">
                        <label for="AddressPhone_{{form.id}}" class="floated-label">{{ 'customer.addresses.phone' | t }}</label>
                      </div>
                    </div>
                  </div>

                  <label for="address_default_address_new" class="checkbox-group">
                    {{ form.set_as_default_checkbox }}
                    <span class="checkbox-label">{{ 'customer.addresses.set_default' | t }}</span>
                  </label>

                  <p><input type="submit" class="btn general-form__submit address-lightbox__button" value="{{ 'customer.addresses.update' | t }}"></p>
                  <p><a href="#" class="underlined-link" onclick="Shopify.CustomerAddress.toggleForm({{form.id}}); return false;"><span>{{ 'customer.addresses.cancel' | t }}</span></a></p>
                  <p><a href="#" class="address-lightbox__cancel" onclick="Shopify.CustomerAddress.toggleForm({{form.id}}); return false;"><span>{{ 'customer.addresses.cancel' | t }}</span></a></p>

                {% endform %}
              </div>

            </div>

          {% endfor %}

        </div>

        {% if paginate.pages > 1 %}
          {% include 'pagination' %}
        {% endif %}

        {% comment %}
          Add address form, hidden by default
        {% endcomment %}

        <p><a href="#" class="btn general-form__submit" onclick="Shopify.CustomerAddress.toggleNewForm(); return false;">{{ 'customer.addresses.add_new' | t }}</a></p>
        <div id="AddAddress" class="address-lightbox">
          {% form 'customer_address', customer.new_address, class: 'general-form' %}

            <h2 class="text-center address-lightbox__title h4">{{ 'customer.addresses.add_new' | t }}</h2>

            <div class="grid">

              <div class="grid__item one-half small--one-whole">
                <div class="input-group">
                  <input type="text" id="AddressFirstNameNew" class="input-full" name="address[first_name]" value="{{form.first_name}}" autocapitalize="words">
                  <label for="AddressFirstNameNew" class="floated-label">{{ 'customer.addresses.first_name' | t }}</label>
                </div>
              </div>

              <div class="grid__item one-half small--one-whole">
                <div class="input-group">
                  <input type="text" id="AddressLastNameNew" class="input-full" name="address[last_name]" value="{{form.last_name}}" autocapitalize="words">
                  <label for="AddressLastNameNew" class="floated-label">{{ 'customer.addresses.last_name' | t }}</label>
                </div>
              </div>

            </div>

            <div class="input-group">
              <input type="text" id="AddressCompanyNew" class="input-full" name="address[company]" value="{{form.company}}" autocapitalize="words">
              <label for="AddressCompanyNew" class="floated-label">{{ 'customer.addresses.company' | t }}</label>
            </div>

            <div class="input-group">
              <input type="text" id="AddressAddress1New" class="input-full" name="address[address1]" value="{{form.address1}}" autocapitalize="words">
              <label for="AddressAddress1New" class="floated-label">{{ 'customer.addresses.address1' | t }}</label>
            </div>

            <div class="input-group">
              <input type="text" id="AddressAddress2New" class="input-full" name="address[address2]" value="{{form.address2}}" autocapitalize="words">
              <label for="AddressAddress2New" class="floated-label">{{ 'customer.addresses.address2' | t }}</label>
            </div>

            <div class="grid">
              <div class="grid__item large--one-half">
                <div class="input-group">
                  <input type="text" id="AddressCityNew" class="input-full" name="address[city]" value="{{form.city}}" autocapitalize="words">
                  <label for="AddressCityNew" class="floated-label">{{ 'customer.addresses.city' | t }}</label>
                </div>
              </div>

              <div class="grid__item large--one-half">
                <div class="input-group child-input-focused">
                  <select id="AddressCountryNew" class="input-full" name="address[country]" data-default="{{form.country}}">{{ all_country_option_tags }}</select>
                  <label for="AddressCountryNew" class="floated-label">{{ 'customer.addresses.country' | t }}</label>
                </div>
              </div>

              <div class="grid__item" id="AddressProvinceContainerNew" style="display:none">
                <div class="input-group child-input-focused">
                  <select id="AddressProvinceNew" class="input-full" name="address[province]" data-default="{{form.province}}"></select>
                  <label for="AddressProvinceNew" class="floated-label">{{ 'customer.addresses.province' | t }}</label>
                </div>
              </div>

              <div class="grid__item large--one-half">
                <div class="input-group">
                  <input type="text" id="AddressZipNew" class="input-full" name="address[zip]" value="{{form.zip}}" autocapitalize="characters">
                  <label for="AddressZipNew" class="floated-label">{{ 'customer.addresses.zip' | t }}</label>
                </div>
              </div>

              <div class="grid__item large--one-half">
                <div class="input-group">
                  <input type="tel" id="AddressPhoneNew" class="input-full" name="address[phone]" value="{{form.phone}}">
                  <label for="AddressPhoneNew" class="floated-label">{{ 'customer.addresses.phone' | t }}</label>
                </div>
              </div>
            </div>

            <label for="address_default_address_new" class="checkbox-group">
              {{ form.set_as_default_checkbox }}
              <span class="checkbox-label">{{ 'customer.addresses.set_default' | t }}</span>
            </label>

            <p><input type="submit" class="btn address-lightbox__button general-form__submit" value="{{ 'customer.addresses.add' | t }}"></p>
            <a href="#" class="underlined-link" onclick="Shopify.CustomerAddress.toggleNewForm(); return false;" class="address-lightbox__cancel"><span>{{ 'customer.addresses.cancel' | t }}</span></a>
            <a href="#" class="address-lightbox__cancel" onclick="Shopify.CustomerAddress.toggleNewForm(); return false;" class="address-lightbox__cancel"><span>{{ 'customer.addresses.cancel' | t }}</span></a>

          {% endform %}
        </div>

      </section>

    </div>

  </div>

</div>

<script>
  // Initialize observers on address selectors
  new Shopify.CountryProvinceSelector('AddressCountryNew', 'AddressProvinceNew', {
    hideElement: 'AddressProvinceContainerNew'
  });

  // Setup province selector on each customer address
  {% for address in customer.addresses %}
    new Shopify.CountryProvinceSelector('AddressCountry_{{address.id}}', 'AddressProvince_{{address.id}}', {
      hideElement: 'AddressProvinceContainer_{{address.id}}'}
    );
  {% endfor %}

  // Modified contents of customer_area.js (global asset)
  Shopify.CustomerAddress = {
    toggleForm: function(id) {
      var body = document.body;
      var openedClass = 'opened';
      var editEl = document.getElementById('EditAddress_'+id);

      if ( (' ' + editEl.className + ' ').indexOf(' ' + openedClass + ' ') > -1 ) {
        editEl.classList.remove(openedClass);
        body.classList.remove('address-lightbox-opened');
      } else {
        editEl.classList.add(openedClass);
        body.classList.add('address-lightbox-opened');
      }

      return false;
    },

    toggleNewForm: function() {
      var el = document.getElementById('AddAddress');
      var body = document.body;
      var openedClass = 'opened';

      if ( (' ' + el.className + ' ').indexOf(' ' + openedClass + ' ') > -1 ) {
        el.classList.remove(openedClass);
        body.classList.remove('address-lightbox-opened');
      } else {
        el.classList.add(openedClass);
        body.classList.add('address-lightbox-opened');
      }

      return false;
    },

    destroy: function(url, confirm_msg) {
      if (confirm(confirm_msg || "Are you sure you wish to delete this address?")) {
        Shopify.postLink(url, {'parameters': {'_method': 'delete'}});
      }
    }
  }
</script>

{% endpaginate %}
