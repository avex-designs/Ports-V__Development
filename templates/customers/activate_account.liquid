<!-- /templates/customers/activate_account.liquid -->
<div class="account-page--wrapper">
      <div class="grid">
        <div class="grid__item large--one-half push--large--one-quarter text-center">

          <header class="section-header">
            <h1 class="section-header__title h2">{{ 'customer.activate_account.title' | t }}</h1>
            <p>{{ 'customer.activate_account.subtext' | t }}</p>
          </header>

        </div>
      </div>

      {% comment %}
        This form must use 'activate_customer_password'
      {% endcomment %}

      {% form 'activate_customer_password', class: 'general-form' %}

      <div class="grid">
        <div class="grid__item xlarge--four-twelfths large--one-half push--xlarge--one-third push--large--one-quarter text-center">

          <div class="general-form--inner">

            {{ form.errors | default_errors }}

            <div class="input-group">
              <a href="#" class="toggle-password icon-eye"></a>
              <input type="password" value="" name="customer[password]" id="CustomerPassword" class="input-full" placeholder="{{ 'customer.activate_account.password' | t }}">
              <label for="CustomerPassword" class="floated-label">{{ 'customer.activate_account.password' | t }}</label>
            </div>

            <div class="input-group">
              <a href="#" class="toggle-password icon-eye"></a>
              <input type="password" value="" name="customer[password_confirmation]" id="CustomerPasswordConfirmation" class="input-full" placeholder="{{ 'customer.activate_account.password_confirm' | t }}">
              <label for="CustomerPasswordConfirmation" class="floated-label">{{ 'customer.activate_account.password_confirm' | t }}</label>
            </div>

            <input type="submit" class="btn btn--full general-form__submit" value="{{ 'customer.activate_account.submit' | t }}">
            <input type="submit" class="btn--secondary btn--full general-form__submit" name="decline" value="{{ 'customer.activate_account.cancel' | t }}">

          </div>

        </div>
      </div>
      {% endform %}>
</div>