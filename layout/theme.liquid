<!doctype html>
<html class="no-js" lang="{{ shop.locale }}">

<head>

	{% include 'SEO-All-in-one' %}


	<!-- Basic page needs ================================================== -->
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

	{% if settings.favicon %}
		<link rel="shortcut icon" href="{{ settings.favicon | img_url: '32x32' }}" type="image/png"/>
	{% endif %}

	<!-- Title and description ================================================== -->
	<title>
		{{ page_title }}{% if current_tags %}{% assign meta_tags = current_tags | join: ', ' %} &ndash; {{ 'general.meta.tags' | t: tags: meta_tags }}{% endif %}{% if current_page != 1 %} &ndash; {{ 'general.meta.page' | t: page: current_page }}{% endif %}{% unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless %}
	</title>

	{% if page_description %}
		<meta name="description" content="{{ page_description | escape }}">
	{% endif %}

	<!-- Helpers ================================================== -->
	{% include 'social-meta-tags' %}
	<link rel="canonical" href="{{ canonical_url }}">
	<meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
	<meta name="theme-color" content="{{ settings.color_primary }}">

	<!-- CSS ================================================== -->
	{{ 'foundation.accordion.min.css' | asset_url | stylesheet_tag }}
	{{ 'timber.scss.css' | asset_url | stylesheet_tag }}
	{{ 'jcf.scss.css' | asset_url | stylesheet_tag }}
	{{ 'theme.scss.css' | asset_url | stylesheet_tag }}

	{% comment %} {{ 'style-guide.scss.css' | asset_url | stylesheet_tag }} {% endcomment %}

	<!-- Stevie Sans Font -->
	<link rel="stylesheet" href="https://use.typekit.net/vlr2rhr.css">

	<!-- Sections ================================================== -->
	<script>
		window.theme = window.theme || {};
		theme.strings = {
			zoomClose: {{ "products.zoom.close" | t | json }},
			zoomPrev: {{ "products.zoom.prev" | t | json }},
			zoomNext: {{ "products.zoom.next" | t | json }},
			moneyFormat: {{ shop.money_format | json }},
			addressError: {{ 'home_page.map.address_error' | t | json }},
			addressNoResults: {{ 'home_page.map.address_no_results' | t | json }},
			addressQueryLimit: {{ 'home_page.map.address_query_limit_html' | t | json }},
			authError: {{ 'home_page.map.auth_error_html' | t | json }},
			cartEmpty: {{ 'cart.general.empty' | t | json }},
			cartCookie: {{ 'cart.general.cookies_required' | t | json }},
			cartSavings: {{ 'cart.general.savings_html' | t: savings: '[savings]' | json }},
			cartTitle: {{ 'cart.general.title' | t | json }},
			cartSubtotal: {{ 'cart.general.subtotal' | t | json }},
			cartTax: {{ 'cart.general.tax_and_shipping_calculates_at_checkout' | t | json }},
			checkoutLabel: {{ 'cart.general.proceed_to_checkout' | t | json }},
			checkoutLink: {{ '/checkout' | json }},
            continueShoppingLink: {{ '/collections/all' | json }},
			viewBagLabel: {{ 'cart.general.view_bag' | t | json }},
			viewBagLink: {{ routes.cart_url | json }},
			noImageLink: {{ 'https://cdn.shopify.com/s/assets/no-image-2048-5e88c1b20e087fb7bbe9a3771824e743c244f437e4f8ba93bbf7b11b53f7824c.gif' | json }},
			addToCartTextLoading: {{ 'Loading...' | json }},
			addToCartTextUnavailable: {{ 'Unavailable' | json }},
            continueShopping: {{ 'cart.general.continue_shopping' | t | json }},
            quantity: {{ 'cart.label.quantity' | t | json }},
            item: {{ 'cart.label.item' | t | json }},
            options: {{ 'cart.label.options' | t | json }},
            price: {{ 'cart.label.price' | t | json }},
			soldOut: {{ 'products.product.sold_out' | t | json }},
			onlyOneLeftInStock: {{ 'products.product.only_one_left_in_stock' | t | json }}
		};
		theme.settings = {
			cartType: {{ settings.cart_type | json }},
			gridType: {{ settings.collection_products_grid | json }}
		};
	</script>

	{{ 'jquery-2.2.3.min.js' | asset_url | script_tag }}
	{{ 'jquery-cookie.min.js' | asset_url | script_tag }}

	<script src="{{ 'lazysizes.min.js' | asset_url }}" async="async"></script>

	{% if template contains 'customers/reset' %}
		{{ '//www.huratips.com/scripts/jquery.pwstrength/jquery.pwstrength.min.js' | script_tag }}
		{{ '//www.huratips.com/scripts/jquery.pwstrength/jquery.pwstrength.min.css' | stylesheet_tag }}
	{% endif %}

	<script src="{{ 'theme.js' | asset_url }}" defer="defer"></script>
	<script src="{{ 'foundation.accordion.min.js' | asset_url }}" defer="defer"></script>

	<!-- Header hook for plugins ================================================== -->
	{{ content_for_header }}

	{{ 'modernizr.min.js' | asset_url | script_tag }}

	{% comment %}
		If you store has customer accounts disabled, you can remove the following JS file
	{% endcomment %}
	{% if request.page_type contains 'customers/' %}
		{{ 'shopify_common.js' | shopify_asset_url | script_tag }}
	{% endif %}

	{{ 'main.scss.css' | asset_url | stylesheet_tag }}

	{% section 'filter-menu-settings' %}
</head>

{% comment %}
	Add the page template as a class for easy page or template specific styling.
{% endcomment %}
<body id="{{ page_title | handle }}"
	  class="{% if customer %}customer-logged-in {% endif %}template-{{ request.page_type | handle }} {{ if template == 'article.journal-post' }} template-journal-post {{ endif }}">
	{% section 'minicart' %}

	{% section 'header' %}

	<div id="PageContainer" class="page-container">

		{% if request.page_type == "index" %}
			{% section 'slideshow' %}
		{% endif %}

		<main class="main-content" role="main">
			{% unless request.page_type == "index" or template == 'article.journal-post' %}
			<div class="wrapper">
				{% endunless %}
				{{ content_for_layout }}
				{% unless request.page_type == "index" or template == 'article.journal-post' %}
			</div>
			{% endunless %}
		</main>

		{% if template == "product" or template == "blog" or template == "search" or template == "article.journal-post" %}
			{% section 'newsletter' %}
		{% endif %}

		{% section 'footer' %}

		{% section 'newsletter-popup' %}

		{% section 'gdpr' %}
	</div>

	{% comment %}
		Template-specific js
	{% endcomment %}
	<script>
		{% if resetPassword %}
			$(function () {
				timber.resetPasswordSuccess();
			});
		{% endif %}
	</script>

	{% comment %}
		Ajaxify your cart with this plugin.
		Documentation:
		- http://shopify.com/timber#ajax-cart
	{% endcomment %}
	{% if settings.cart_type == 'drawer' %}
		{% include 'ajax-cart-template' %}
	{% endif %}

	{% if request.page_type == 'product' or request.page_type == 'index' %}
		<script>
			// Override default values of shop.strings for each template.
			// Alternate product templates can change values of
			// add to cart button, sold out, and unavailable states here.
			theme.productStrings = {
				addToCart: {{ 'products.product.add_to_cart' | t | json }},
				soldOut: {{ 'products.product.sold_out' | t | json }},
				unavailable: {{ 'products.product.unavailable' | t | json }}
			}
		</script>
	{% endif %}


	{% include 'spurit_po2_theme_snippet' %}

	<div id="SearchModal" class="mfp-hide">
		{% include 'search-bar', search_btn_style: 'btn', search_bar_location: 'search-bar--modal' %}
	</div>

	<script src="//cdn.codeblackbelt.com/js/modules/also-bought/main.min.js?shop=portsv-us.myshopify.com"></script>
	<ul hidden>
		<li id="a11y-refresh-page-message">{{ 'general.accessibility.refresh_page' | t }}</li>
		<li id="a11y-selection-message">{{ 'general.accessibility.selection_help' | t }}</li>
	</ul>

	{% include 'social-login' %}

	<script type="text/javascript" src="//www.klaviyo.com/media/js/public/klaviyo_subscribe.js"></script>
	<script src="{{ 'bodyScrollLock.min.js' | asset_url }}"></script>
	<script src="{{ 'slick.min.js' | asset_url }}"></script>
	<script src="{{ 'theme-slate.js' | asset_url }}"></script>
	<script src="{{ 'main.js' | asset_url }}"></script>
	<script src="{{ 'vendor.js' | asset_url }}"></script>
	<script src="{{ 'minicart.js' | asset_url }}"></script>
	<script type="text/javascript">
		KlaviyoSubscribe.attachToForms('#contact_form', {
			hide_form_on_success: true,
			extra_properties: {
				$source: '$embed',
				$method_type: "Klaviyo Form",
				$method_id: 'embed',
				$consent_version: 'Embed default text'
			},
			success: function () {
				document.getElementById('contact_form').classList.add("contact-form--success")
			}
		});

		KlaviyoSubscribe.attachToForms('#newsletter_form', {
			hide_form_on_success: true,
			extra_properties: {
				$source: '$embed',
				$method_type: "Klaviyo Form",
				$method_id: 'embed',
				$consent_version: 'Embed default text'
			},
			success: function () {
				console.log(document.getElementById('newsletter_form'));

				document.getElementById('newsletter_form').classList.add("contact-form--success")
			}
		});
	</script>
</body>
</html>
