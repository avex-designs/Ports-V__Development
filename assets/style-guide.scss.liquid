/*====================
  BUTTONS N SHET
====================*/

.ports-btn {
    height: 3rem;
    width: 100%;
    max-width: 21.5rem;
    background: #000;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.875rem;
    line-height: 1.375rem;
    letter-spacing: 0.0625rem;
    padding: 0 2rem;

    &:hover {
    	background: #2b2b2b;
    	color: #fff;
    }

    &.white {
    	background: #fff;
    	color: #000;
    }

    &.white:hover {
    	background: #f4f4f4;
    	color: #000;
    }

    &.inactive,
    &.inactive:hover  {
    	background: #8a8a8a;
    	color: #dadada;
    	cursor: not-allowed;
    }

}



.ports-link {
    width: auto;
    background: transparent;
    color: #000;
    display: inline-block;
    align-items: center;
    justify-content: center;
    font-size: 0.875rem;
    line-height: 1.375rem;
    letter-spacing: 0.0625rem;
    text-transform: uppercase;

    &:hover {
        color: #000;
    }

    &.inactive,
    &.inactive:hover  {
    	 color: #8a8a8a;
    	 cursor: not-allowed;
    }

    &:after {
  	    display:block;
  	    content: '';
  	    border-bottom: solid 2px #222323;  
  	    transform: scaleX(0);  
  	    transition: transform 250ms ease-in-out;
  	    transform-origin: 100% 50%;
  	    margin-bottom: -2px;
  	}
  
  	&:hover:after {
  	    transform: scaleX(1);
  	    transform-origin: 0% 50%;
  	}

}











