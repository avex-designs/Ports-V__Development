/*====================
  Typography
====================*/

body,
p,
.ports-btn,
h1, .h1,
h2, .h2,
h3, .h3,
h4, .h4,
h5, .h5,
h6, .h6 {
	font-family: "stevie-sans",sans-serif;
	font-style:  normal;
}

body, p {
	font-size: 0.875rem;
	line-height: 1.5rem;
	font-weight: 400;
}

h1, .h1,
h2, .h2,
h3, .h3,
h4, .h4,
h6, .h6, {
	text-transform: uppercase;
	font-weight: 500;
}

h1, .h1 {
	font-size: 3.5rem;
	line-height: 1.03;
	letter-spacing: 0.3125rem;
}

h2, .h2 {
	font-size: 2.5rem;
	line-height: 3.5rem;
	letter-spacing:0.1875rem;
}

h3, .h3 {
	font-size: 2rem;
	line-height: 3rem;
	letter-spacing:0.1875rem;
}

h4, .h4 {
	font-size: 1.5rem;
	line-height: 2.25rem;
	letter-spacing: .125rem;
}

h5, .h5 {
	font-size: 1.5rem;
	line-height: 2rem;
}

h6, .h6 {
	font-size: .75rem;
	line-height: 1.125rem;
	letter-spacing: .0625rem;
}






