.cart{
    .cart__empty-message {
        margin-top: 100px;
        text-align: center;
    }

    .cart__title {
        margin-right: auto;
        margin-bottom: 40px;
        margin-left: auto;
        text-align: center;
        letter-spacing: 4px;
        color: $black;
    }

    .cart__wrapper {
        max-width: 877px;
        margin-right: auto;
        margin-bottom: 230px;
        margin-left: auto;
		padding-top: 80px;
    }

    .cart__footer {
        display: flex;
        justify-content: space-between;
        margin-top: 24px;
        color: $black;
    }

    .cart__footer-link {
        position: relative;
        padding-left: 21px;
        font-size: 12px;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: $black;

        &:after {
            content: "";
            position: absolute;
            top: 50%;
            left: 0;
            display: block;
            width: 0;
            height: 0;
            border: 4px solid transparent;
            border-right: 5px solid $black;
            transform: translateY(-50%);
        }

        &:before {
            content: "";
            position: absolute;
            bottom: -5px;
            left: 0;
            width: 0;
            height: 1px;
            background-color: black;
            transition: 0.3s width;
        }

        &:hover {
            &:before {
                width: 100%;
            }
        }
    }

    .cart__footer-result {
        width: 350px;
    }

    .cart__footer-subtotal {
        display: flex;
        justify-content: space-between;
		font-size: 20px;
    }

    .cart__footer-tax {
        margin-top: 4px;
        margin-bottom: 16px;
        font-size: 12px;
        font-weight: 300;
        color: rgba(0, 0, 0, 0.7);
    }

    .cart__footer-button {
        max-width: none;
        width: 100%;
        transition: background 0.3s;
    }

    @include breakpoint(medium) {
        .cart__footer-link {
            display: none;
        }

		.cart__wrapper{
			padding-top: 64px;
		}
    }

    @media (max-width: 1023px) {
        .cart__title {
            letter-spacing: 3px;
        }
    }

    @include breakpoint(extra-small) {
        .cart__body {
            margin-bottom: 20px;
			padding-top: 20px;
        }

		.cart__footer-subtotal{
			font-size: 16px;
			letter-spacing: 1.5px;
			font-weight: 700;
		}

        .cart__empty-message {
            margin-top: 40px;
        }

		.cart__title{
			margin-bottom: 0;
		}

		.cart-item__info{
			flex-grow: 1;
		}

        .cart__footer-result {
            width: 100%;
        }

        .cart__footer-tax {
            font-size: 14px;
            color: rgba(0, 0, 0, 0.5);
        }

        .cart__footer {
            margin-top: auto;
            margin-right: -30px;
            margin-left: -30px;
            padding: 15px 30px;
            background-color: $whitesmoke;
        }

        .cart__wrapper {
            display: flex;
            flex-direction: column;
            min-height: calc(100vh - 180px);
            margin-bottom: 0;
            padding-top: 20px;
        }

        .cart__footer-button {
            max-width: none;
        }
    }

    @media (max-width: 719px) {
        .cart__footer {
            margin-right: -15px;
            margin-left: -15px;
            padding: 15px 15px;
        }
    }
}

