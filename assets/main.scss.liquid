#minicart{
	position: relative;
	z-index: 99999;

	.minicart__container{
		position: fixed;
		right: 0;
		top: 0;
		width: 100%;
		max-width: 400px;
		height: 100vh;
		background-color: #fff;
		box-shadow: 0 2px 14px rgba(0, 0, 0, 0.11);
		transform: translateX(100%);
		transition-property: transform;
		transition-duration: .3s;

		&.minicart__container--open{
			transform: translateX(0);
		}
	}

	.minicart__wrapper{
		position: relative;
		display: flex;
		flex-direction: column;
		height: 100%;
		background-color: #fff;
	}

	.minicart__header{
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding-top: 20px;
		padding-right: 13px;
		padding-bottom: 15px;
		padding-left: 24px;
		background-color: #F7F7F7;
	}

	.minicart__loading-overlay{
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background-color: #fff;
		opacity: 0;
		visibility: hidden;

		&.minicart__loading-overlay--shown{
			opacity: 0.3;
			visibility: visible;
		}
	}

	.minicart__title{
		font-size: 16px;
		line-height: 30px;
		letter-spacing: 1.43px;
		color: #000;
	}

	.minicart__close{
		cursor: pointer;
		padding: 5px;
		line-height: 1;
		transition-property: opacity;
		transition-duration: .3s;

		svg{
			display: block;
			width: 14px;
		}

		&:hover{
			opacity: .7;
		}
	}

	.minicart__body{
		height: 100%;
		padding-top: 32px;
		overflow: hidden;
	}

	.minicart__empty{
		padding-left: 16px;
		padding-right: 16px;
	}

	.minicart__empty-message{
		font-size: 18px;
		letter-spacing: -0.06px;
		text-align: center;
		text-transform: none;
		font-weight: 300;
		color: #000;
	}

	.minicart__buttons{
		margin-top: 24px;
	}

	.minicart__button{
		max-width: none;
		margin-top: 7px;
		font-weight: 400;
		letter-spacing: 0.5px;
		transition-property: background-color;
		transition-duration: .3s;
	}

	.minicart__overlay{
		position: fixed;
		top: 0;
		right: 0;
		bottom: 0;
		left: 0;
		background: #000;
		opacity: 0;
		visibility: hidden;
		z-index: -1;
		transition-property: visibility, opacity;
		transition-duration: .3s;

		&.minicart__overlay--shown{
			visibility: visible;
		}
	}

	.minicart__items{
		height: 100%;
		padding-left: 24px;
		overflow-y: auto;

		&::-webkit-scrollbar {
			width: 6px;
		}

		&::-webkit-scrollbar-track {
			background: #fff;
			border-radius: 4px;
		}

		&::-webkit-scrollbar-thumb {
			background: #d3d3d3;
			border-radius: 4px;
		}
	}

	.minicart__subtotal-wrapper{
		display: flex;
		justify-content: space-between;
		align-items: center;
		font-size: 16px;
		letter-spacing: 1.5px;
		font-weight: bold;
		color: #000;
		text-transform: uppercase;
	}

	.minicart__footer{
		padding-top: 17px;
		padding-right: 16px;
		padding-bottom: 16px;
		padding-left: 16px;
		background-color: #F7F7F7;
	}

	.minicart__checkout{
		max-width: none;
		margin-top: 16px;
		font-weight: 400;
		letter-spacing: 0.5px;
		transition-property: background-color;
		transition-duration: .3s;
	}

	.minicart__footer-description{
		margin-top: 8px;
		font-size: 14px;
		color: rgba(0,0,0,.5);
		font-weight: 300;
	}

	.minicart__link{
		position: relative;
		display: inline-block;
		margin-top: 10px;
		font-size: 14px;
		font-weight: 300;
		line-height: 1.5;
		transition-property: opacity;
		transition-duration: .3s;
		color: #000;

		&::before{
			content: '';
			position: absolute;
			bottom: 0;
			width: 100%;
			height: 1px;
			background-color: #000;
		}

		&:hover{
			opacity: .7;
		}
	}

	@include breakpoint(medium){
		.minicart__footer {
			padding-bottom: 80px;
		}
	}

	@include breakpoint(extra-small){
		.minicart__header{
			padding-left: 16px;
			padding-right: 10px;
		}

		.minicart__items{
			padding-left: 16px;
		}

		.minicart__container{
			max-width: 325px;
		}

		.cart-product__info{
			padding-right: 16px;
		}

		.minicart__overlay{
			&.minicart__overlay--shown{
				opacity: .7;
			}
		}

		.minicart__footer{
			padding-top: 15px;
		}
	}
}

